<%- include('../partials/header.ejs') %>


<body>
    <div class="container">
        <h1 class="logo">Instagram</h1>
        <svg aria-label="Trouble logging in?" class="x1lliihq x1n2onr6 x5n08af" fill="currentColor"
        height="96" role="img" viewBox="0 0 96 96" width="96"><title>Trouble logging in?</title>
        <circle cx="48" cy="48" fill="none" r="47" stroke="currentColor" stroke-linecap="round" 
        stroke-linejoin="round" stroke-width="2"></circle><path d="M60.931 70.001H35.065a5.036 5.036 0 0 1-5.068-5.004V46.005A5.036 5.036 0 0 1 35.065 41H60.93a5.035 5.035 0 0 1 5.066 5.004v18.992A5.035 5.035 0 0 1 60.93 70ZM37.999 39.996v-6.998a10 10 0 0 1 20 0v6.998" 
        fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
        </path>
         </svg>
         <p style="font-size: 15px;">
            Enter your email and we send varification code then you can 
            reset your password
        </p>
        <form  id="signupForm" action="/send-email" method="post">
            <% if(locals.email) {%>
                <input type="email" id="email" name="email" value="<%= email %>" placeholder="Email" readonly>
            <% }else{ %>
                <input type="email" id="email" name="email"  placeholder="Email" required>
            <% } %>
            <input type="text" id="passcode" name="code"  placeholder="passcode" style="display: none;" >
            <p class="info-text">People who use our service may have uploaded your contact information to Instagram. <a href="https://www.facebook.com/help/instagram/261704639352628" target="_blank">Learn More</a></p>
            <p class="terms">By signing up, you agree to our <a href="https://help.instagram.com/581066165581870/?locale=en_US" target="_blank">Terms</a>, <a href="https://www.facebook.com/privacy/policy" target="_blank">Privacy Policy</a> and <a href="#">Cookies Policy</a>.</p>
            <input type="submit" id="send" class="signup-button" value="Send" style="cursor: pointer;">
            <% if(locals.emailNotFound){ %>
                <div class="alert alert-danger" role="alert"><%= emailNotFound %></div>
                <% } %>
        </form>
        <p class="get-app">Get the app.</p>
        <% if(locals.send){ %>
            <div class="alert alert-danger" role="alert">We send email that is usable for only one minut</div>  
            <script>
                let passcode = document.getElementById("passcode");
                passcode.style.display = "block";
                setInterval(()=>{
                    window.location = "/login"
                },30000);
            </script>
            
        <% } %>

        
<%- include('../partials/footer.ejs') %>
